{% if reviews %}
<div class="product-reviews-rating-star">
    {% if show_customer_rating_label %}
    <div class="customer-rating-label">
        <h3>{{ _("Customer Ratings:") }}</h3>
    </div>
    {% endif %}
    <span class="stars">
        {% for full_star in range(full_stars) %}
            <i class="fa fa-star star-rating-full"></i>
        {% endfor %}
        {% if half_star %}
            <i class="fa fa-star-half-o star-rating-half"></i>
        {% endif %}
        {% for empty_star in range(empty_stars) %}
            <i class="fa fa-star-o star-rating-empty"></i>
        {% endfor %}
    </span>
    <span class="rating">{{ rating }}</span>
    <span class="count">
        {%- trans reviews_count=reviews -%}
            {{ reviews_count }} review
        {%- pluralize -%}
            {{ reviews_count }} reviews
        {%- endtrans -%}
    </span>
    <span class="recommend">
        ({{ _("{recommend_count} recommend this product").format(recommend_count=would_recommend|percent) }})
    </span>
</div>
{% endif %}
